<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/destination">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dest_text"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginLeft="100sp"
            android:textSize="20dp"
            android:textColor="#000000" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="546dp"
        android:id="@+id/dest_listView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emer_return"
        android:id="@+id/returnFromDest"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:textColor="#000000" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RegionLink"
                android:id="@+id/regionLink"
                android:layout_marginLeft="200dp"
                android:textSize="20dp"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="New Text"
                android:id="@+id/videoLink"
                android:layout_marginLeft="250dp"
                android:clickable="true"
                android:autoLink="web"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>